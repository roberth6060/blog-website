<%- include("partials/header") %>
<h1>All Posts</h1>
<div class="blog">

    <ul class="cards-blog" reversed>
        <!-- Blog post-->
        <% posts.slice().reverse().forEach(function(post){ %>
        <li class="cards__item-blog">
            <div class="card">
                <div class="card__image card__image--fence"><img src="<%- post.image %>"></div>
                <div class="card__content"> %>
                    <div class="card__title"><%= post.title %></div>
                    <div class="small text-muted">January 1, 2022</div> %>
                    <p class="card__text">
                        
                        <a class="btn btn-primary card__btn" href="/posts/<%=post._id%>">Read More</a>
                    </p>%>
                </div>%>
            </div>%>
        </li>
        <% }); %>
    </ul>
</div>

<%- include("partials/footer") %>